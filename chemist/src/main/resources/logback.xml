<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight([%level]) %logger{20} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.http"         level="OFF" />
  <logger name="com.amazonaws"           level="OFF" />
  <logger name="com.netty"               level="OFF" />
  <logger name="com.ning.http"           level="OFF" />
  <logger name="funnel.chemist.Sharding" level="INFO" />

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
